	<script type="text/javascript">
		$(document).ready(function(){
			$('#thanhtien1').click(function(){
				var gia1 =document.getElementById('gia1').innerHTML;
				var soluong1 =document.getElementById('soluong1').innerHTML;
				gia1 = parseInt(gia1);
				soluong1 =parseInt(soluong1);
				var thanhtien1 =gia1*soluong1;
				document.getElementById('thanhtien1').innerHTML= thanhtien1;

			});
			$('#thanhtien2').click(function(){
				var gia2 =document.getElementById('gia2').innerHTML;
				var soluong2 =document.getElementById('soluong2').innerHTML;
				gia2 = parseInt(gia2);
				soluong2 =parseInt(soluong2);
				var thanhtien2 =gia2*soluong2;
				document.getElementById('thanhtien2').innerHTML= thanhtien2;

			});
			$('#thanhtien3').click(function(){
				var gia3 =document.getElementById('gia3').innerHTML;
				var soluong3 =document.getElementById('soluong3').innerHTML;
				gia3 = parseInt(gia3);
				soluong3 =parseInt(soluong3);
				var thanhtien3 =gia3*soluong3;
				document.getElementById('thanhtien3').innerHTML= thanhtien3;

